{% extends 'base.html.twig' %}
{%  block pagestyle %}
    <!--page level css -->
    <link href="{{ asset ('bundles/app/vendors/jasny-bootstrap/css/jasny-bootstrap.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bundles/app/vendors/x-editable/css/bootstrap-editable.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset ('bundles/app/css/pages/user_profile.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}
{% block body %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Profil Client</h1>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('servicom_default_index') }}">
                        <i class="livicon" data-name="home" data-size="16" data-color="#000"></i>
                        Dashboard
                    </a>
                </li>

                <li class="active">Client </li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content paddingleft_right15">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6 margin_10 animated fadeInLeftBig">
                    <!-- Trans label pie charts strats here-->
                    <div class="lightbluebg no-radius"style="background-color: #515763">
                        <div class="panel-body squarebox square_boxs">
                            <div class="col-xs-12 pull-left nopadmar">
                                <div class="row">
                                    <div class="square_box col-xs-7 text-right">
                                        <span>Factures</span>
                                        <div class="number" id="count">22</div>
                                    </div>
                                    <i class="livicon pull-right" data-name="notebook" data-loop="true" data-color="#ffffff" data-hovercolor="#ffffee" data-size="70"></i>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 margin_10 animated fadeInLeftBig">
                    <!-- Trans label pie charts strats here-->
                    <div class="lightbluebg no-radius" style="background-color: #A6192E"><a href="{{ path('fos_user_registration_register') }}">
                            <div class="panel-body squarebox square_boxs">
                                <div class="col-xs-12 pull-left nopadmar">
                                    <div class="row">
                                        <div class="square_box col-xs-7 text-right">
                                            <span style="color: #ffffff;">Nouveau Client</span>
                                            <div class="number">  <i class="livicon pull-right" data-name="plus" data-loop="true" data-color="#ffffff" data-hovercolor="#ffffee" data-size="40"></i>

                                            </div>
                                        </div>
                                        <i class="livicon pull-right" data-name="user" data-loop="true" data-color="#ffffff" data-hovercolor="#ffffee" data-size="70"></i>

                                    </div>
                                    <div class="row">

                                    </div>


                                </div>
                            </div></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="panel">
                    <div class="panel-heading" style="background-color: #A6192E;color:#ffffee">
                        <h4 class="panel-title">
                            <i class="livicon" data-name="user" data-size="16" data-loop="true" data-c="#fff" data-hc="white"></i>
                           Client : # {{ client.id }}
                        </h4>
                    </div>
                    <br />
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="users">

                                <tr>
                                    <td> Société</td>
                                    <td>
                                        <a href="#" data-pk="1" class="editable" data-title="Modifier le nom" id="ctIntitule">{{ client.ctIntitule }}</a>

                                    </td>

                                </tr>
                                <tr>
                                    <td> Type</td>
                                    <td>
                                        <a href="#" data-pk="1" class="editable" data-title="Modifier E-mail" id="ctEmail">{{ client.ctEmail }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Catégorie</td>
                                    <td>
                                        <a href="#" data-pk="1"  class="editable" data-title="Modifier Catégorie" id="categorie">{{ client.categorie }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Contact</td>
                                    <td>
                                        <a href="#" data-pk="1" class="editable" data-title="Modifier le contact" id="ctContact">{{ client.ctContact }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Adresse</td>
                                    <td>
                                        <a href="#" data-pk="1" class="editable" data-title="Modifier Adresse" id="ctAdresse">{{ client.ctAdresse }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Complément Adresse</td>
                                    <td>
                                        <a href="#" data-pk="1" class="editable" data-title="Modifier le complément" id="ctComplement">{{ client.ctComplement }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Code Région</td>
                                    <td>
                                        <a href="#" id="status" data-type="select" data-pk="1" data-value="1" data-title="Code région" id="ctCoderegion">{{ client.ctCoderegion }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Ville</td>
                                    <td>
                                        <a href="#" id="status" data-type="select" data-pk="1" data-value="1" data-title="Modifier la ville" id="ctVille">{{ client.ctVille }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Code Postal</td>
                                    <td>
                                        <a href="#" data-pk="1"  class="editable" data-title="Modifier le code postal" id="ctCodepostal">{{ client.ctCodepostal }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Téléphone</td>
                                    <td>
                                        <a href="#" data-pk="1"  class="editable" data-title="Modifier le téléphone" id="ctTelephone">{{ client.ctTelephone }} - {{ client.ctTelephone1 }} - {{ client.ctTelephone2 }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Télécopie</td>
                                    <td>
                                        <a href="#" data-pk="1"  class="editable" data-title="Modifier la télécopie" id="ctTelecopie">{{ client.ctTelecopie }}</a>
                                    </td>
                                </tr>

                                <tr>
                                    <td>Site Web</td>
                                    <td>
                                        <a href="{{ client.ctSite }}">{{ client.ctSite }}</a>
                                    </td>
                                </tr>

                            </table>
                            <form name="editForm" action="" method="POST">
                                <input type="text" id="intitulea" name="intitulea" >
                                <input type="text" id="emaila" name="emaila">
                                <input type="text" id="categoriea" name="categoriea">
                                <input type="text" id="contacta" name="contacta">
                                <input type="text" id="adressea" name="adressea">
                                <input type="text" id="complementa"name="complementa">
                                <input type="text" id="coderegiona" name="coderegiona">
                                <input type="text" id="villea" name="villea">
                                <input type="text" id="codepostala" name="codepostala">
                                <input type="text" id="telephonea" name="telephonea">
                                <input type="text" id="telecopiea" name="telecopiea">
                                <input type="submit" id="sub" name="sub">

                            </form>
                        </div>
                        <!-- Modal for showing delete confirmation -->

                    </div>
                </div>
            </div>

            <!-- row--> </section>
    </aside>
{% endblock %}
{% block js %}
    <!-- begining of page level js -->
    <!-- Bootstrap WYSIHTML5 -->
    <script  src="{{ asset('bundles/app/vendors/jasny-bootstrap/js/jasny-bootstrap.js') }}" type="text/javascript"></script>
    <script  src="{{ asset('bundles/app/vendors/x-editable/jquery.mockjax.js') }}" type="text/javascript"></script>

    <script  src="{{ asset('bundles/app/vendors/x-editable/bootstrap-editable.js') }}" type="text/javascript"></script>

    <script  src="{{ asset('bundles/app/js/pages/user_profile.js') }}" type="text/javascript"></script>

    <!-- end of page level js -->
